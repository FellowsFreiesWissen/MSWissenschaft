<ginn>
    <global>
        <wish gesture="Drag" fingers="2">
            <action name="zoom_in" when="update">
                <trigger prop="delta y" min="1" max="1000"/>
                <button>5</button>
            </action>
        </wish>
        <wish gesture="Drag" fingers="2">
            <action name="zoom_out" when="update">
                <trigger prop="delta y" min="-1000" max="-1"/>
                <button>6</button>
            </action>
        </wish>
    </global>
</ginn>
